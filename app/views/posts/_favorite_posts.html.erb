<div class="media">

  <%= render 'votes/voting', post: post %>

  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to post.title, topic_post_path(post.topic, post) %>
      <%= image_tag post.user.avatar_url(20) %>
    </h4>

    <small>
      submitted <%= time_ago_in_words(post.created_at) %> ago by <%= link_to post.user.name, user_path(post.user) %><br>
      <%= pluralize(post.votes.count, "Vote") %> / <%= pluralize(post.comments.count, "Comment") %>
    </small>
  </div>
</div>
